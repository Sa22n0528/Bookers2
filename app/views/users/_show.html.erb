<h2>New book</h2>

<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <p>errors</p>
    <div id="error_explanation">
      <h2><%= book.errors.count %> errors prohibited  data from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
