
<% if @user.errors.any? %>
  <p>errors</p>
  <div class="alert alert-warning">
    <h2><%= @user.errors.count %> errors prohibited  data from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>User info</h1>
      <%= form_for(@user) do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name %>
        <%= f.attachment_field :profile_image %>  
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>
        <div><%= f.submit 'Update User' %></div>
      <% end %>
    </div>
  </div>
</div>