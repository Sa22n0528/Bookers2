
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/show', user: @user, book: @book%>
    </div>

    <h2>Books</h2>
    <div class="col-xs-9">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to  user_path(book.user.id) do %>
              <%= attachment_image_tag book.user,:profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img" %>
              <% end %>
            </td>
            <td>
            <%= link_to  book_path(book.id) do %>
            <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>