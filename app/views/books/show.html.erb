
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/show', user: @user, book: @book%>
    </div>



    <div class="col-xs-9">
      <h2>Book detail</h2>

      <table class="table">
        <tr>
          <td>

            <%= link_to  user_path(@user.id) do %>
            <div>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png", size:'40x40' %>
            </div><br><br>
            <%= @user.name %> 

            <% end %>
          </td>
          <%= link_to book_path(@bookdetail.id) do %>
          <td><%= @bookdetail.title %></td>
          <% end %>
          <td><%= @bookdetail.body%></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@bookdetail.id), class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@bookdetail.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>