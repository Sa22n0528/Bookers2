



<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/show', user: @user, book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>

        <thead>
          <tr>
          <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |f| %>
          <tr>
          <td>
          <%= link_to user_path(f.id) do %>
          <%= attachment_image_tag f.user,:profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.png", size:'40x40' %>
          <% end %>
          </td>


            <td>
              <%= link_to f.title, book_path(f.id) %>
            </td>
            <td><%= f.body %>
            </td>
          </tr>
          <% end %>
      </table>
    </div>

  </div>
</div>