<%= flash[:notice] %>
<% if flash[:success] %>
<div class="flash">
  <%= flash[:success] %>
</div>
<% end %>

       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error is<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='container'>
<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
<h1>Editing Book</h1>
<%= form_for(@bookdetail, url:"/books/#{@bookdetail.id}") do |f| %>
  <h4>Title</h4>
  <div class="col-xs-12">
    <%= f.text_field :title, size: 12*5 %>
  </div>
  <h4>Opinion</h4>
    <div class="col-xs-12">
  <%= f.text_area :body, size: 200*200 %>
  </div>
  <div><%= f.submit 'Update Book' %></div>
<% end %>

    <%= link_to "Show", book_path(@bookdetail.id) %>
    <%= link_to "Back", books_path %>


</div>
</div>
</div>
